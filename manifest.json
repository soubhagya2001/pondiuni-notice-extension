{
    "manifest_version": 3,
    "name": "PondiUni Notice Extension",
    "version": "1.0",
    "description": "Fetch and display notices from PondiUni API",
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://pondiuni-notice-api.onrender.com/"
    ],
    "icons": {
      "128": "icon.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }
  